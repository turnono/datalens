{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "@datalens/shared": ["packages/shared/src/index.ts"],
      "@datalens/shared/*": ["packages/shared/src/*"]
    }
  },
  "include": ["apps", "packages", "tools", "infra"],
  "exclude": ["**/dist", "**/node_modules"]
}
